        <a onclick="javascript: GT.OnpenSubMenu(this);" class="large ui circular icon basic button">
            <i class="sidebar icon"></i>
        </a>
    </div>
    @if (Account.Current.HasAny(Constants.Roles.GeneralAdministrator, Constants.Roles.HistoricalSightAdministrator, Constants.Roles.ReadOnly))
    {
        <a class="item @(Model == 1 ? "active" : string.Empty)" href="@Url.Action("Index", "HistoricalSight", new { area = "Admin" })">
            Todos Patrimônios Históricos
        </a>
        if (Account.Current.HasAny(Constants.Roles.GeneralAdministrator, Constants.Roles.HistoricalSightAdministrator))
        {
            <a class="item @(Model == 2 ? "active" : string.Empty)" href="@Url.Action("Create", "HistoricalSight", new { area = "Admin" })">
                Adicionar Memorial
            </a>
        }
    }
</div>