@using MrRondon.Infra.Security.Helpers
@model int
<div class="ui vertical fluid right tabular menu">
    <div class="item header gt-p-0" data-responsive>
        <a onclick="javascript: GT.OnpenSubMenu(this);" class="large ui circular icon basic button">
            <i class="sidebar icon"></i>
        </a>
    </div>
    @if (Account.Current.HasAny("Administrador_Geral", "Administrador_Categoria", "Consulta"))
    {
        <a class="item @(Model == 1 ? "active" : string.Empty)" href="@Url.Action("Index", "Category", new { area = "Admin" })">
            Todas Categorias
        </a>
        if (Account.Current.HasAny("Administrador_Geral", "Administrador_Categoria"))
        {
            <a class="item @(Model == 2 ? "active" : string.Empty)" href="@Url.Action("Create", "Category", new { area = "Admin" })">
                Adicionar Categoria
            </a>
        }
    }
</div>