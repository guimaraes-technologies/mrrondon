@model MrRondon.Domain.Entities.Category
@{
    ViewBag.Title = "Editar categoria";
}

@section header
{
    <h1 class="ui header">
        <span class="content gt-text-uppercase">@ViewBag.Title</span>
    </h1>
}

@section navigation_right
{
    @Html.Partial("_Navigation", 1)
}

@using (Html.BeginForm("Edit", "Category", FormMethod.Post, new { @class = "ui form" }))
{
    @Html.AntiForgeryToken()
    @Html.HiddenFor(e => e.CategoryId)
    @Html.Partial("_Form")
    @Html.Partial("_ButtonSubmit")
}

@section scripts {
    @Scripts.Render("~/bundles/validation")
}