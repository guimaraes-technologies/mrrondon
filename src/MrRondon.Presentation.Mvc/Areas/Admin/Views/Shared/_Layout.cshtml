@using MrRondon.Infra.Security.Helpers
@{Layout = "~/Views/Shared/_Layout.cshtml";}
@section styles{
    @RenderSection("styles", required: false)
}
@if (Account.Current.IsAuthenticated)
{
    @section navigation_left
{
        <nav class="gt-navigation-left">
            <div class="fluid ui large inverted secondary vertical menu gt-main-menu">
                @if (Account.Current.HasAny("Administrador_Geral", "Administrador_Categoria", "Consulta"))
                {
                    <a href="@Url.Action("Index", "Category", new {area = "Admin"})" class="item">
                        <i class="id card icon"></i>
                        <span>Categorias</span>
                    </a>
                }
                @if (Account.Current.HasAny("Administrador_Geral", "Administrador_Sub_Categoria", "Consulta"))
                {
                    <a href="@Url.Action("Index", "SubCategory", new {area = "Admin"})" class="item">
                        <i class="id card icon"></i>
                        <span>Sub Categorias</span>
                    </a>
                }
                @if (Account.Current.HasAny("Administrador_Geral", "Administrador_Cidade", "Consulta"))
                {
                    <a href="@Url.Action("Index", "City", new {area = "Admin"})" class="item">
                        <i class="id card icon"></i>
                        <span>Cidades</span>
                    </a>

                }
                @if (Account.Current.HasAny("Administrador_Geral", "Administrador_Empresa", "Consulta"))
                {
                    <a href="@Url.Action("Index", "Company", new {area = "Admin"})" class="item">
                        <i class="id card icon"></i>
                        <span>Empresas</span>
                    </a>
                }
                @if (Account.Current.HasAny("Administrador_Geral", "Administrador_Evento", "Consulta"))
                {
                    <a href="@Url.Action("Index", "Event", new {area = "Admin"})" class="item">
                        <i class="id card icon"></i>
                        <span>Eventos</span>
                    </a>
                }
                @if (Account.Current.HasAny("Administrador_Geral", "Administrador_Memorial", "Consulta"))
                {
                    <a href="@Url.Action("Index", "HistoricalSight", new {area = "Admin"})" class="item">
                        <i class="id card icon"></i>
                        <span>Memoriais</span>
                    </a>
                }
                @if (Account.Current.HasAny("Administrador_Geral", "Administrador_Usuário", "Consulta"))
                {
                    <a href="@Url.Action("Index", "User", new {area = "Admin"})" class="item">
                        <i class="id user icon"></i>
                        <span>Usuários</span>
                    </a>
                }
            </div>
            @Html.Partial("_Settings")
        </nav>
    }
}
<header class="gt-header">
    @RenderSection("header", required: false)
</header>
<article class="ui basic segment gt-article">
    @RenderBody()
</article>
<nav class="gt-navigation-right">
    @RenderSection("navigation_right", required: false)
</nav>
@section scripts{@RenderSection("scripts", required: false)}