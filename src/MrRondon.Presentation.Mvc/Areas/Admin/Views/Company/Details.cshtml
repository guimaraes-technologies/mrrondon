@model MrRondon.Domain.Entities.Company
@{
    ViewBag.Title = "Detalhes da empresa";
}
@section header
{
    <h1 class="ui header">
        <span class="content gt-text-uppercase">@ViewBag.Title</span>
    </h1>
}
@section navigation_right
{
    @Html.Partial("_Navigation", 1)
}
    <div class="ui stackable column grid divided gt-grid-details">
        <h3 class="ui dividing header">Informações da Empresa</h3>
        <div class="row">
            <div class="four wide column">
                <h4 class="ui header">@Html.DisplayNameFor(e => e.Logo)</h4>
                <img style="height: 250px; border: #045e55 3px solid" alt="" class="ui centered medium image circular" src="@Url.Content((Model.GetLogo ?? "~/Content/Images/without_image.jpg"))">
            </div>
            <div class="twelve wide column">
                <h4 class="ui header">@Html.DisplayNameFor(e => e.Cover)</h4>
                <img style="height: 250px; border: #045e55 3px solid" alt="" class="ui fluid image" src="@Url.Content((Model.GetCover ?? "~/Content/Images/without_image.jpg"))">
            </div>
        </div>
        <div class="row">
            <div class="sixteen wide column">
                <h4 class="ui header">@Html.DisplayNameFor(e => e.Name)</h4>
                @Model.Name
            </div>
        </div>
        <div class="row">
            <div class="sixteen wide column">
                <h4 class="ui header">@Html.DisplayNameFor(e => e.FancyName)</h4>
                @Model.FancyName
            </div>
        </div>
        <div class="row">
            <div class="three wide column">
                <h4 class="ui header">@Html.DisplayNameFor(e => e.SubCategoryId)</h4>
                @Model.Cnpj
            </div>">
            <div class="nine wide column">
                <h4 class="ui header">@Html.DisplayNameFor(e => e.SubCategoryId)</h4>
                @Model.GetSegment
            </div>
        </div>

        <h3 class="ui dividing header">Informações do Endereço</h3>
        <div class="three column row">
            <div class="three wide column">
                <h4 class="ui header">@Html.DisplayNameFor(e => e.Address.ZipCode)</h4>
                @Model.Address.ZipCode
            </div>
            <div class="ten wide column">
                <h4 class="ui header">@Html.DisplayNameFor(e => e.Address.Street)</h4>
                @Model.Address.Street
            </div>
            <div class="three wide column">
                <h4 class="ui header">@Html.DisplayNameFor(e => e.Address.Number)</h4>
                @Model.Address.Number
            </div>
        </div>
        <div class="four column row">
            <div class="four wide column">
                <h4 class="ui header">@Html.DisplayNameFor(e => e.Address.Neighborhood)</h4>
                @Model.Address.Neighborhood
            </div>
            <div class="eight wide column">
                <h4 class="ui header">@Html.DisplayNameFor(e => e.Address.AdditionalInformation)</h4>
                @Model.Address.AdditionalInformation
            </div>
            <div class="four wide column">
                <h4 class="ui header">@Html.DisplayNameFor(e => e.Address.CityId)</h4>
                @Model.Address.City.Name
            </div>
        </div>

        <h3 class="ui dividing header">Informações de Contato</h3>
        @Html.Partial("_ContactsDetail", Model.Contacts)
    </div>