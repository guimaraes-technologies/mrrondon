@model MrRondon.Presentation.Mvc.ViewModels.CompanyAddressVm
@{
    ViewBag.Title = "Detalhes da empresa";
}
@section header
{
    <h1 class="ui header">
        <span class="content gt-text-uppercase">@ViewBag.Title</span>
    </h1>
}
@section navigation_right
{
    @Html.Partial("_Navigation", 1)
}
<div class="ui stackable column grid divided gt-grid-details">
    <div class="row">
        <div class="eight wide column">
            <h4 class="ui header">@Html.DisplayNameFor(e => e.Company.Name)</h4>
            @Model.Company.Name
        </div>
    </div>
</div>