
@using System.Web.Optimization
@using MrRondon.Presentation.Mvc.Extensions
@model MrRondon.Presentation.Mvc.ViewModels.UserContactVm
@{
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
    ViewBag.Title = "Editar conta";
    ViewBag.Menu02 = "active";
}
@section header
{
    <h1 class="ui header">
        <span class="content gt-text-uppercase">@ViewBag.Title</span>
    </h1>
}
@section navigation_right
{
    @Html.Partial("_Navigation")
}

@using (Html.BeginForm("Edit", "Account", new { area = "" }, FormMethod.Post, new { @class = "ui form" }))
{
    @Html.AntiForgeryToken()
    @Html.HiddenFor(model => model.UserId)
    @Html.HiddenFor(model => model.Cpf)

    <div class="field">
        <div class="two fields">
            <div class="field">
                @Html.LabelFor(model => model.FirstName)
                @Html.SemanticTextBoxFor(model => model.FirstName, null)
            </div>
            <div class="field">
                @Html.LabelFor(model => model.LastName)
                @Html.SemanticTextBoxFor(model => model.LastName, null)
            </div>
        </div>
    </div>
    <div class="list-contact">
        @Html.Action("Contacts", "User", new { area = "Admin", userContact = Model })
    </div>

    @Html.Partial("_ButtonSubmit")
}

@section scripts
{
    @Scripts.Render("~/bundles/validation")
    @Scripts.Render("~/bundles/usuario")
}